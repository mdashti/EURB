			<property name="prefix" value="/"/>
			<property name="suffix" value=".jsp"/>
		</bean-->
		
	<bean id="AuthoritiesDao" class="com.sharifpro.eurb.dao.spring.AuthoritiesDaoImpl" scope="singleton">
		<property name="dataSource" ref="EURBDataSource" />
	</bean>
	<bean id="ColumnMappingDao" class="com.sharifpro.eurb.dao.spring.ColumnMappingDaoImpl" scope="singleton">
		<property name="dataSource" ref="EURBDataSource" />
	</bean>
	<bean id="DbConfigDao" class="com.sharifpro.eurb.dao.spring.DbConfigDaoImpl" scope="singleton">
		<property name="dataSource" ref="EURBDataSource" />
	</bean>
	<bean id="GroupAggregationDao" class="com.sharifpro.eurb.dao.spring.GroupAggregationDaoImpl" scope="singleton">
		<property name="dataSource" ref="EURBDataSource" />
	</bean>
	<bean id="GroupAuthoritiesDao" class="com.sharifpro.eurb.dao.spring.GroupAuthoritiesDaoImpl" scope="singleton">
